<div class="col-10 no-padding col-offset-1">	
	<div class="col-3 aside-hr-left">
	</div>
	<div class="col-6 no-padding">
		<h1 class="text-center">Busca tu producto</h1>
	</div>
	<div class="col-3 aside-hr-right">
	</div>
</div>

<%= form_tag search_searches_path do %>
	<div class="col-10 col-offset-1 other-background">
		<%= label_tag :key_word, 'Filtrar' %>
		<%= text_field_tag :key_word %>

		<%= label_tag :first_price, 'Price between' %>
		<%= number_field_tag :first_price, 0 %>
		<%= label_tag :second_price, 'and' %>
		<%= number_field_tag :second_price %>

		<%= label_tag :tags, 'Tags' %>
		<%= text_field_tag :tags %>

		<%= label_tag :distance %>
		<%= number_field_tag :distance %>

		<%= hidden_field_tag :latitude, nil, id: "user_latitude" %>
		<%= hidden_field_tag :longitude, nil, id: "user_longitude" %>
		<%= submit_tag 'Filtar', class: "button" %>
	</div>
<% end %>

<%= render partial: "products/product" %>