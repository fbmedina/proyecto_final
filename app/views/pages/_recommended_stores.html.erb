<div class="col-12">
	<% @stores.sample(3).each do |store| %>
		<div class="col-12 cover-photo">
			<%= image_tag store.cover_photo %>
		</div>

		<div class="col-3 col-offset-1 circle no-padding">
			<%= image_tag store.photo %>
		</div>

		<div class="col-8 name">
		  <%= link_to store.name, store %>
		</div>
	<% end %>
</div>