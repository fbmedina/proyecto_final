<div class="col-12">
	<% @stores.sample(3).each do |store| %>
		<div class="col-12 no-padding">
			<%= image_tag store.cover_photo, class: "not-bordered" %>
		</div>

		<div class="col-3 col-offset-1 no-padding">
			<%= image_tag store.photo, class: "circle" %>
		</div>

		<div class="col-8 name">
		  <%= link_to store.name, store %>
		</div>
	<% end %>
</div>