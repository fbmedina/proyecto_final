<% @products.each do |product| %>

  <div class="col-3 col-offset-1 no-padding">
    <%= link_to image_tag(product.photo), [product.store, product] %>
  </div>

  <div class="col-7">
    <h2><%= link_to product.name, [product.store, product] %></h2>
    <h3><%= product.price %></h3>
    <p><%= product.description %></p>
    <p>
      <% product.tags.each do |tag| %>
        #<%= tag %>
      <% end %>
    </p>

      <% if can? :edit, product %>
        <p class="align-right">
          <%= link_to image_tag("gear.svg"), edit_store_product_path(product.store, product) %>
          <%= link_to image_tag("garbage.svg"), [product.store, product], method: :delete, data: { confirm: 'Are you sure?' }%>
        </p>
      <% end %>
  </div>
<% end %>