<div class="col-12 no-padding super-top">
  <%= image_tag @product.photo, class: "not-bordered under" %>
</div>

<div class="information-product-overlaying col-12 no-padding">
  <div class="col-2">
  	<%= link_to image_tag("store.svg"), @product.store %>
  </div>

  <div class="col-3 col-offset-7 align-right inline">
  	<%= render partial: "likes/form", locals: {likeable: @product} %>
      <h3><%= @product.likes.count %></h3>
  </div>
</div>

<div class="row"></div>

<div class="buttons-product-overlaying col-12 no-padding">
  <div class="col-2 col-offset-3 no-padding">
  	<%= link_to image_tag("previous.svg") %>
  </div>
  <div class="col-2 col-offset-2 no-padding">
  	<%= link_to image_tag("next.svg") %>
  </div>
</div>

<div class="col-10 no-padding col-offset-1">  
    <h2 class="text-center"><%= @product.name %></h2>
</div>

<div class="col-3 col-offset-1 no-padding no-margin">
	<h1>$<%= @product.price %></h1>
</div>

<div class="col-5 col-offset-2 no-padding">
  <a href="#" class="button full-size"><%= image_tag "whatsapp.svg", class: "icon" %> Contáctate</a>
</div>

<div class="row"></div>

<div class="col-10 col-offset-1 icon">
	<p><%= @product.description %></p>
	<p class="align-right">
      <% @product.tags.each do |tag| %>
        #<%= tag %>
      <% end %>
    </p>
  	<p class="text-center">
      <% @product.store.stations.each do |station| %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 76.3">
          <path d="M50,0C22.4,0,0,17.1,0,38.2c0,21,22.4,38.2,50,38.2s50-17.1,50-38.2C100,17.1,77.6,0,50,0z M50,70 C25.9,70,6.3,55.7,6.3,38.2C6.3,20.6,25.9,6.3,50,6.3s43.7,14.3,43.7,31.8C93.7,55.7,74.1,70,50,70z"/> 
          <path class="<%= station.lines.first.alias %>" d="M51.8,19.2c-0.5-1-1.7-1.3-2.7-0.8c-0.3,0.2-0.6,0.5-0.8,0.8l-9.5,16.3c-0.9,1.6-0.9,3.5,0,5.1L48.2,57 c0.5,1,1.7,1.3,2.7,0.8c0.4-0.2,0.6-0.5,0.8-0.8l9.5-16.3c0.9-1.6,0.9-3.5,0-5.1L51.8,19.2z M27.8,19.2c-0.5-1-1.8-1.3-2.7-0.8 c-0.3,0.2-0.6,0.5-0.8,0.8l-9.5,16.3c-0.9,1.6-0.9,3.5,0,5.1L24.3,57c0.5,1,1.7,1.3,2.7,0.8c0.4-0.2,0.6-0.5,0.8-0.8l9.5-16.3 c0.9-1.6,0.9-3.5,0-5.1C34.3,30.2,30.2,23.2,27.8,19.2z M85.2,35.5l-9.5-16.3c-0.5-1-1.7-1.3-2.7-0.8c-0.3,0.2-0.6,0.5-0.8,0.8 l-9.5,16.3c-0.9,1.6-0.9,3.5,0,5.1L72.1,57c0.5,1,1.7,1.3,2.7,0.8c0.4-0.2,0.6-0.5,0.8-0.8l9.5-16.3C86.1,39.1,86.1,37.1,85.2,35.5 z"/>
        </svg>
        <%= "#{station}" %>
        <% if (station != @store.stations.last) %>
        ·
        <% end %>
      <% end %>
    </p>

</div>

<div class="col-10 col-offset-1">
	<%= render partial: "user_wishlists/add_to_wishlist" %>
</div>

<%= render partial: "shared/linebreak" %>

<% if @store.comments.any? %>
	<%= render partial: "comments/comments", locals: {commentable: @product} %>
<% end %>

<%= render partial: "comments/form", locals: {commentable: @product} %>

<% if can? :edit, @product %>
  <p class="align-right">
    <%= link_to image_tag("gear.svg"), edit_store_product_path(product.store, product) %>
    <%= link_to image_tag("garbage.svg"), [product.store, product], method: :delete, data: { confirm: 'Are you sure?' }%>
  </p>
<% end %>