<div class="col-10 col-offset-1">
	<% commentable.comments.each do |comment| %>
		<div class="col-2 no-padding">
			<%= link_to image_tag(comment.user.avatar), comment.user %>
		</div>
		<div class="col-10">
			<p><%= comment.content %></p> 
			<p>- <%= link_to comment.user, comment.user %> <%= link_to image_tag("garbage.svg"), [commentable, comment], method: :delete, data: { confirm: 'Are you sure?' } %> </p>
		</div>
	<% end %>
</div>
