<p>
  <strong>Comments:</strong>
  <ul>
  <% commentable.comments.each do |comment| %>
  	<li><%= comment.content %> - <%= comment.user %></li>
  	<%= link_to 'X', [@store, commentable, comment], method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, comment %>
  <% end %>
  </ul>
</p>