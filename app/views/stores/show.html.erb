<div class="col-12 no-padding top">
  <%= image_tag @store.cover_photo, class: "not-bordered under top" %>

  <div class="store-overlaying">
    <div class="col-3 col-offset-1 no-padding">
      <%= image_tag @store.photo, class: "circle" %>
    </div>

    <div class="col-7 inline half-padding">
      <div class="col-9 no-padding"><h2><%= @store.name %></h2></div>
        <div class="col-3 no-padding align-right inline">
          <%= render partial: "likes/form_store", locals: {likeable: @store} %>
          <h3><%= @store.likes.count %></h3>
        </div>
    </div>
  </div>
</div>

<div class="col-12 no-padding top">
  <div class="col-2 col-offset-1">
    <div class="col-12 no-padding">
     <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
        <path class="facebook" d="M8.52 0h83q8.48 1.28 8.48 8.52v83q-1.28 8.48-8.52 8.48h-21.59a.5.5 0 0 1-.57-.57v-37.21a.54.54 0 0 1 .57-.57h12.21l2-15.34h-14.21a.5.5 0 0 1-.57-.57v-10.8q0-5.4 9.38-5.4h6v-13.63a104.83 104.83 0 0 0-11.36-.57h-.9q-13 0-17.9 11.93a26.8 26.8 0 0 0-1.14 7.67v10.8a.5.5 0 0 1-.57.57h-12.49v15.34h12.5a.55.55 0 0 1 .57.57v37.21a.5.5 0 0 1-.57.57h-44.32q-8.52-1.28-8.52-8.52v-83q1.28-8.48 8.52-8.48z"/>
      </svg>
    </div>
    <div class="col-12 no-padding">
    <%= image_tag "instagram.svg" %>
    </div>
  </div>

  <div class="col-7 col-offset-1">
    <p><%= @store.description %></p>
    <div class="col-3 col-offset-2 no-padding">
      <%= image_tag "whatsapp.svg" %>
    </div>
    <div class= "col-7 no-padding">
      <h3 class="align-right"><%= @store.phone_number %></h3>
    </div>
  </div>

  <div class="col-10 col-offset-1">
    <p class="text-center"><%= image_tag "metro.svg", class: "icon" %></p>
    <p>
      <% @store.stations.each do |station| %>
        <%= "#{station}" %>
        <% if (station != @store.stations.last) %>
        Â·
        <% end %>
      <% end %>
    </p>
  </div>
</div>
<%= render partial: "shared/linebreak" %>

<% if @store.products.any? %>
  <%= render partial: "products/product" %>
<% else %>
  <div class="row"></div>
  <div class="col-10 col-offset-1 text-center"><h4>No hay productos en la Tienda</h4></div>
<% end %>

<% if can? :create, @store.products.build %>
  <%= render partial: 'products/form' %>
<% end %>

<%= render partial: "shared/linebreak" %>

<% if @store.comments.any? %>
  <%= render partial: "comments/comments_store", locals: {commentable: @store} %>
<% end %>

<%= render partial: "comments/form_store", locals: {commentable: @store} %>

<% if can? :edit, @store  %>
  <div class="col-4 col-offset-7 align-right">
      <%= link_to image_tag("gear.svg"), edit_store_path(@store), class: "icon" %>
      <%= link_to image_tag("garbage.svg"), @store, class: "icon", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>