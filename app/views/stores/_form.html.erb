<%= form_for @store, html: {multipart: true} do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12 no-padding top under">
    <% if @store.cover_photo? %>
      <%= image_tag @store.cover_photo, class: "not-bordered under" %>
    <% else %>
      <%= image_tag "default_cover_photo.png", class: "not-bordered under" %>
    <% end %>

    <div class="store-overlaying">
      <div class="col-3 col-offset-1 no-padding photo-field">
        <label class="upload_store_photo">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 71.8" enable-background="new 0 0 100 71.8">
            <path d="M63.7 40.1c0-7.6-6.1-13.7-13.7-13.7s-13.7 6.1-13.7 13.7 6.1 13.7 13.7 13.7 13.7-6.2 13.7-13.7zm7.8.2c0 11.8-9.6 21.4-21.5 21.4-11.8 0-21.4-9.6-21.4-21.4 0-3.3.8-6.6 2.3-9.5h-30.9v32.6c.1 4.6 3.8 8.3 8.4 8.4h83.3c4.6-.1 8.3-3.8 8.3-8.4v-32.6h-30.8c1.5 2.9 2.3 6.2 2.3 9.5zm20.5-31.5h-83.6c-4.5-.2-8.3 3.4-8.4 7.9v11.1h32.2c3.8-5 10.4-9.5 17.8-9.5s14 4.5 17.9 9.5h32.1v-11c0-4.4-3.6-8-8-8zm-25.5-1.7l-4.2-6.8c-.1-.2-.3-.3-.6-.3h-23c-.2 0-.4.1-.6.3-1.6 2.3-3.1 4.6-4.8 7h33.2c.1-.1.1-.2 0-.2zm-12.1-1.3h-8.4v-4.1h8.4v4.1zm-31.7-2.4c-.1-.2-.3-.3-.5-.3h-9c-.2 0-.4.1-.5.3-.5 1.2-1 2.5-1.6 3.8h13.1c-.5-1.4-1-2.6-1.5-3.8z"/>
          </svg>
          <%= f.file_field :photo %>
        </label>
      </div>

    <div class="store-overlaying">
      <div class="col-3 col-offset-1 no-padding photo-field absolute">
        <%= f.hidden_field :photo_cache %>
        <%= image_tag @store.photo, class: "circle under" if @store.photo? %>
      </div>
    </div>

      <div class="col-7 inline half-padding">
        <div class="col-9 no-padding">
          <h2>
            <%= f.text_field :name, placeholder: "Nombre Tienda" %>
          </h2>
        </div>
      </div>
      <div class="col-1 no-padding bottom">
        <label class="upload_cover_store_photo">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 71.8" enable-background="new 0 0 100 71.8">
            <path class="white" d="M63.7 40.1c0-7.6-6.1-13.7-13.7-13.7s-13.7 6.1-13.7 13.7 6.1 13.7 13.7 13.7 13.7-6.2 13.7-13.7zm7.8.2c0 11.8-9.6 21.4-21.5 21.4-11.8 0-21.4-9.6-21.4-21.4 0-3.3.8-6.6 2.3-9.5h-30.9v32.6c.1 4.6 3.8 8.3 8.4 8.4h83.3c4.6-.1 8.3-3.8 8.3-8.4v-32.6h-30.8c1.5 2.9 2.3 6.2 2.3 9.5zm20.5-31.5h-83.6c-4.5-.2-8.3 3.4-8.4 7.9v11.1h32.2c3.8-5 10.4-9.5 17.8-9.5s14 4.5 17.9 9.5h32.1v-11c0-4.4-3.6-8-8-8zm-25.5-1.7l-4.2-6.8c-.1-.2-.3-.3-.6-.3h-23c-.2 0-.4.1-.6.3-1.6 2.3-3.1 4.6-4.8 7h33.2c.1-.1.1-.2 0-.2zm-12.1-1.3h-8.4v-4.1h8.4v4.1zm-31.7-2.4c-.1-.2-.3-.3-.5-.3h-9c-.2 0-.4.1-.5.3-.5 1.2-1 2.5-1.6 3.8h13.1c-.5-1.4-1-2.6-1.5-3.8z"/>
          </svg>
          <%= f.file_field :cover_photo %>
        </label>
        <%= f.hidden_field :cover_photo_cache %>
      </div>
    </div>
  </div>

<div class="col-12 no-padding top">
  <div class="col-2 col-offset-1">
    <div class="col-12 no-padding">
      <a href="#" class="myButton">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
          <path class="facebook" d="M8.52 0h83q8.48 1.28 8.48 8.52v83q-1.28 8.48-8.52 8.48h-21.59a.5.5 0 0 1-.57-.57v-37.21a.54.54 0 0 1 .57-.57h12.21l2-15.34h-14.21a.5.5 0 0 1-.57-.57v-10.8q0-5.4 9.38-5.4h6v-13.63a104.83 104.83 0 0 0-11.36-.57h-.9q-13 0-17.9 11.93a26.8 26.8 0 0 0-1.14 7.67v10.8a.5.5 0 0 1-.57.57h-12.49v15.34h12.5a.55.55 0 0 1 .57.57v37.21a.5.5 0 0 1-.57.57h-44.32q-8.52-1.28-8.52-8.52v-83q1.28-8.48 8.52-8.48z"/>
        </svg>
      </a>
      <div class="dropDownField">
        <%= f.text_field :facebook_link, class: "no-padding" %>
        <div class="myButton col-2 col-offset-10 no-padding">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
            <path d="M50 0a50 50 0 1 0 50 50 50 50 0 0 0-50-50zm30 39.87a105.53 105.53 0 0 1-10.6 11.51c-4.27 4.08-8.29 8.43-12.59 12.49-3.43 3.22-6.32 7-10.35 9.61-2.86 1.83-5.71 2-8.51-.08-6.64-5-12.06-11.32-17.36-17.64-1.81-2.15-3.22-5.31 0-8.08s6.78-3.29 9.77-.59c3.24 2.92 6.33 6 9.27 9.26 1.9 2.09 3.24 2.28 5.19 0a326.27 326.27 0 0 1 24.6-24.6c2.25-2.08 4.73-3.22 7.51-2a6.68 6.68 0 0 1 4.38 6 6.85 6.85 0 0 1-1.31 4.12z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="col-12 no-padding">
      <%= link_to image_tag("instagram.svg"), "#", class: "myButton2" %>
      <div class="dropDownField2">
        <%= f.text_field :instagram_link, class: "no-padding" %>
        <div class="myButton col-2 col-offset-10 no-padding">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
            <path d="M50 0a50 50 0 1 0 50 50 50 50 0 0 0-50-50zm30 39.87a105.53 105.53 0 0 1-10.6 11.51c-4.27 4.08-8.29 8.43-12.59 12.49-3.43 3.22-6.32 7-10.35 9.61-2.86 1.83-5.71 2-8.51-.08-6.64-5-12.06-11.32-17.36-17.64-1.81-2.15-3.22-5.31 0-8.08s6.78-3.29 9.77-.59c3.24 2.92 6.33 6 9.27 9.26 1.9 2.09 3.24 2.28 5.19 0a326.27 326.27 0 0 1 24.6-24.6c2.25-2.08 4.73-3.22 7.51-2a6.68 6.68 0 0 1 4.38 6 6.85 6.85 0 0 1-1.31 4.12z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="col-7 col-offset-1">
    <p>
      <%= f.text_area :description, placeholder: "Descripción de tu tienda" %>
    </p>
    <div class="col-3 col-offset-2 no-padding">
      <%= image_tag "whatsapp.svg" %>
    </div>
    <div class= "col-7 no-padding">
      <h3 class="align-right">
        <%= f.text_field :phone_number, placeholder: "Celular" %>
      </h3>
    </div>
  </div>

  <div class="row"></div>

  <div class="col-10 col-offset-1">
    <h3 class="text-center top">¿Dónde entregas?</h3>
      <% @lines.each do |line| %>
        <h3 class="accordion"><%= image_tag "metro.svg", class: "icon" %>Línea <%= line.name %></h3>
        <div class="panel block relative metro-line">
          <%= f.collection_check_boxes :station_ids, line.stations, :id, :name do |b| %>
            <%= b.label { b.check_box + b.text } %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
